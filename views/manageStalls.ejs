<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Stalls</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Food Availability App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/addStall">Add new stall</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="text-center">
            <h2>Manage Stalls</h2>
        </div>

        <div class="my-4">
            <h4>Existing Stalls</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Stall ID</th>
                        <th scope="col">Stall Image</th>
                        <th scope="col">Stall Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < stalls.length; i++) { %>
                        <tr>
                            <td><%= stalls[i].stallID %></td>
                            <td><img src="/images/<%= stalls[i].image %>" class="img-fluid" style="max-width: 100px;"></td>
                            <td><%= stalls[i].stallName %></td>
                            <td><%= stalls[i].foodcourtName %></td>
                            <td>
                                <a href="/editStall/<%= stalls[i].stallID %>" class="btn btn-sm btn-primary me-2">Edit</a>
                                <a href="/deleteStall/<%= stalls[i].stallID %>" onclick="return confirm('Are you sure you want to delete this stall?')" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
