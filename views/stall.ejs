<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Stall Details</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Food Availability App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    </li> 
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container mt-4">
        <div class="text-center mb-4"><h2>Stall Details</h2></div>
        <% if (stall) { %> 
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Stall Name:</h5>
                    <p class="card-text"><%= stall.name %></p>
                    <h5 class="card-title">Stall Image:</h5>
                    <img src="/images/<%= stall.image %>" class="img-fluid mb-3" alt="Stall Image" style="max-width: 200px;">
                    <h3 class="card-title">Foods:</h3>
                    <% if (foods.length > 0) { %>
                        <ul class="list-group">
                            <% foods.forEach(food => { %>
                                <li class="list-group-item">
                                    <p><strong>Name:</strong> <%= food.name %></p>
                                    <p><strong>Price:</strong> $<%= food.price %></p>
                                    <p>
                                        <strong>Availability:</strong>
                                        <% if (food.availability === 'available') { %>
                                            <span class="badge bg-success">Available</span>
                                        <% } else if (food.availability === 'running out') { %>
                                            <span class="badge bg-warning text-dark">Running Out</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Out of Stock</span>
                                        <% } %>
                                    </p>
                                </li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p class="card-text">No foods available in this stall.</p>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <p>No stall found.</p>
        <% } %>
        <a href="/" class="btn btn-primary">Back</a>
    </div>
</body>
</html>
