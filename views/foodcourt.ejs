<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Foodcourt Details</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Food Availability App</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="text-center">
            <h2>Foodcourt Details</h2>
        </div>
        
        <% if (foodcourt) { %> 
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Foodcourt Name</h5>
                            <p class="card-text"><%= foodcourt.name %></p>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <img src="/images/<%= foodcourt.image %>" class="card-img-top" alt="Foodcourt Image">
                        <div class="card-body">
                            <h5 class="card-title">Location</h5>
                            <p class="card-text"><%= foodcourt.location %></p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <h3 class="mb-3">Stalls</h3>
                    <% if (stalls.length > 0) { %>
                        <% stalls.forEach(stall => { %>
                            <div class="card mb-3">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img src="/images/<%= stall.image %>" class="img-fluid rounded-start" alt="Stall Image">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title"><a href="/stall/<%= stall.stallID %>"><%= stall.name %></a></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No stalls found for this foodcourt.</p>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <p>No foodcourt found.</p>
        <% } %>

        <a href="/" class="btn btn-primary">Back</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>